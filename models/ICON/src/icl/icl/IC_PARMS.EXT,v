C RCS file, release, date & time of last delta, author, state, [and locker]
C $Header: /project/work/rep/ICON/src/icl/icl/IC_PARMS.EXT,v 1.4 2002/04/12 14:13:12 yoj Exp $ 

C what(1) key, module and SID; SCCS file; date and time of last delta:
C %W% %P% %G% %U%


C......................................................................
C  INCLUDE FILE: IC_PARMS.EXT
C
C  CONTAINS: Dimensioning parameters and data for ICON 
C
C  DEPENDENT UPON: None 
C
C  REVISION HISTORY: Prototype created by Jerry Gipson, January, 1998
C                    Modified by JG May, 1999 to treat PinG concs
C
C......................................................................


c..Dimensioning parameters
      INTEGER  NROOTS
      PARAMETER( NROOTS = 5 )

      INTEGER MXCTMS                     ! Max no. of input CTM files
      PARAMETER( MXCTMS = 3 )

      INTEGER  MX_MECHFL_IC
      PARAMETER ( MX_MECHFL_IC = 500  )  ! Max no. of species
      
      INTEGER MXCVSP                     ! Max no. of terms per species for
      PARAMETER( MXCVSP = 20 )           ! Max no. of conversion terms

      INTEGER MX_INFL_SP
      PARAMETER ( MX_INFL_SP = 500  )    ! Max no. of species in an input file

      INTEGER NTRACERS                   ! No. of catalogued tracers
      PARAMETER( NTRACERS = 8 )

      INTEGER NPILLARS                   ! No. of pillars in PinG plume
      PARAMETER( NPILLARS = 10 )

c..Type declarations
      CHARACTER*16  ICFL_ROOT( NROOTS )     ! Output file root names
      CHARACTER*50  TRAC_DESC( NTRACERS )   ! Description of catalogued tracers
      CHARACTER*16  TRAC_NAME( NTRACERS )   ! Catalogued tracer names
      CHARACTER*23  VGDESC( 6 )             ! Description of vertical grid type
      CHARACTER*16  PING_PDM_1              ! PDM file name
      CHARACTER*16  MET_CRO_3D_CRS          ! MET_CRO_3D file for coarse grid
      CHARACTER*16  MET_CRO_3D_FIN          ! MET_CRO_3D file for fine grid

c..Possible root names of output files
      DATA ICFL_ROOT( 1 ) / 'INIT_CONC_' /
      DATA ICFL_ROOT( 2 ) / 'INIT_GASC_' /
      DATA ICFL_ROOT( 3 ) / 'INIT_AERO_' /
      DATA ICFL_ROOT( 4 ) / 'INIT_NONR_' /
      DATA ICFL_ROOT( 5 ) / 'INIT_TRAC_' /

c..Catalogued tracer species names
      DATA TRAC_NAME( 1 ) / 'IC1_BC0' /
      DATA TRAC_NAME( 2 ) / 'IC1_BC1' /
      DATA TRAC_NAME( 3 ) / 'IC0_BC1' /
      DATA TRAC_NAME( 4 ) / 'STREET' /
      DATA TRAC_NAME( 5 ) / 'CHKBRD' /
      DATA TRAC_NAME( 6 ) / 'SPOS_A' /
      DATA TRAC_NAME( 7 ) / 'SPOS_B' /
      DATA TRAC_NAME( 8 ) / 'SPOS_C' /

c..Descriptions of tracers species
      DATA TRAC_DESC( 1 ) /'Uniform IC/BC with IC = 1.0 and BC 0.0' /
      DATA TRAC_DESC( 2 ) /'Uniform IC/BC with IC = 1.0 and BC 1.0' /
      DATA TRAC_DESC( 3 ) /'Uniform IC/BC with IC = 0.0 and BC 0.0' /
      DATA TRAC_DESC( 4 ) /'Checkerboard pattern of IC/BC = 1.0 & 0.0' /
      DATA TRAC_DESC( 5 ) /'Street pattern of IC/BC = 1.0 & 0.0' /
      DATA TRAC_DESC( 6 ) /'Signal A for superposition test, A-B-C=0' /
      DATA TRAC_DESC( 7 ) /'Signal B for superposition test, A-B-C=0' /
      DATA TRAC_DESC( 8 ) /'Signal C for superposition test, A-B-C=0' /

c..Descriptions of catalogued vertical coordinate systems
      DATA VGDESC( 1 ) / 'Hydrostatic sigma-p    ' /
      DATA VGDESC( 2 ) / 'Non-hydrostatic sigma-p' /
      DATA VGDESC( 3 ) / 'Sigma-z                ' /
      DATA VGDESC( 4 ) / 'Pressure (mb)          ' /
      DATA VGDESC( 5 ) / 'Z (m above sea level)  ' /
      DATA VGDESC( 6 ) / 'H (m above ground      ' /

c..Met & PinG file names
      DATA PING_PDM_1       / 'PING_PDM_1'     /
      DATA MET_CRO_3D_CRS   / 'MET_CRO_3D_CRS' /
      DATA MET_CRO_3D_FIN   / 'MET_CRO_3D_FIN' /


C...........................IC_PARMS.EXT.................................
@


