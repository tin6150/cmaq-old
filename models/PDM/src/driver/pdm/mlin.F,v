C RCS file, release, date & time of last delta, author, state, [and locker]
C $Header: /project/work/rep/PDM/src/driver/pdm/mlin.F,v 1.9 2005/08/29 20:31:12 jug Exp $ 

C what(1) key, module and SID; SCCS file; date and time of last delta:
C %W% %P% %G% %U%

C ****************************************************************
      SUBROUTINE MLIN ( IT, MMS, IPLUM, JPLUM, VM, TOP, BOT,
     &                  ITOP, IBOT, IPLMFLG, MTE )
C*****************************************************************

C  FUNCTION: Set the initial relation of plume and mixing layer(PBL)
C   Initially, plume top & bottom are set completely above HTMIX or,
C   completely below HTMIX.

C........................................................
C i HTMIX  : mixing height                              .
C i TOPHT  : height of plume top                        .
C o ITOP   :  1, plume top is located above HTMIX       .
C          : -1, plume top is located below HTMIX       .
C o IBOT   :  1, plume bottom is located above HTMIX    .
C          : -1, plume bottom is located below HTMIX    .
C........................................................

      USE HGRD_DEFN             ! horizontal domain specifications
      USE VGRD_DEFN
      
      IMPLICIT NONE
 
!     INCLUDE SUBST_HGRD_ID
!     INCLUDE SUBST_VGRD_ID
      INCLUDE 'PLUME.EXT'

      INTEGER IT, MMS, MTE
      INTEGER IPLUM( MS,MTE ), JPLUM( MS,MTE )
      INTEGER ITOP( MS,MTE ), IBOT( MS,MTE ), IPLMFLG( MS,MTE )
      REAL VM( NROWS,NLAYS+4,10,NCOLS ), TOP( MS,MTE ), BOT( MS,MTE )
      
      INTEGER NS, IP, JP
      REAL    HTMIX

C Plume top is above mixing layer.

      DO 200 NS = 1 , MMS
C  Skip stacks or plumes outside the domain
         IF ( IPLMFLG( NS,IT ) .LT. 0 .OR. IPLMFLG( NS,IT ) .GE. 10 ) GO TO 200

         IP = IPLUM( NS,IT )
         JP = JPLUM( NS,IT )
         HTMIX = VM( JP,6,5,IP )
 
         IF ( TOP( NS,IT ) .GT. HTMIX ) THEN
            ITOP( NS,IT ) = 1
         ELSE          ! Plume top is below mixing layer.
            ITOP( NS,IT ) = -1
         END IF

C Plume bottom above mixing layer.
C (ywu july,1995)
 
         IF ( BOT( NS,IT ) .GT. HTMIX ) THEN
            IBOT( NS,IT ) = 1
         ELSE          ! Plume bottom below mixing layer.
            IBOT( NS,IT ) = -1
         END IF
!        write( *, *) ' MLIN :', NS,IP,JP,HTMIX, BOT( NS,IT ),TOP( NS,IT ),
!     &                          IBOT( NS,IT ),ITOP( NS,IT )

200   CONTINUE
      RETURN

      END
@


