C RCS file, release, date & time of last delta, author, state, [and locker]
C $Header: /project/work/rep/CCTM/src/ping/smvgear/PING_CELLORDER.F,v 1.3 2002/04/05 18:23:32 yoj Exp $

C what(1) key, module and SID; SCCS file; date and time of last delta:
C %W% %P% %G% %U%

C:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
      MODULE PING_CELLORDER

C Variables from PING_GRVARS1.EXT ...
C Revision History:
C   March 2000, Jeff Young for monocode

      USE PLUME_PARM  ! Plume dimensioning/control parameters
      USE PLUME_STATE ! inherits PLUME_LOC, which inherits PING_GLOBDIM

      IMPLICIT NONE

!     INTEGER CCOL(  MXCELLS )    ! Column index of ordered cells
!     INTEGER CROW(  MXCELLS )    ! Row index for ordered cells
!     INTEGER CLEV(  MXCELLS )    ! Layer index of ordered cells

      INTEGER, ALLOCATABLE, SAVE :: CCOL( : )
      INTEGER, ALLOCATABLE, SAVE :: CROW( : )
      INTEGER, ALLOCATABLE, SAVE :: CLEV( : )

      CONTAINS

         SUBROUTINE CELL_SEQ ( NPACTIVE, NCELLS )

         INTEGER, INTENT( IN ) :: NPACTIVE
         INTEGER, INTENT( OUT ) :: NCELLS
         INTEGER COL, ROW

!        CHARACTER( 16 ) :: PNAME = 'PING_CELLORDER'
!        INTEGER, SAVE :: JDATE = 9999
!        INTEGER, SAVE :: JTIME = 9999
!        CHARACTER( 256 ) :: MSG

!        NCELLS = NPACTIVE * NPILLARS

!        ALLOCATE ( CCOL( NCELLS ), STAT = ALLOCSTAT )
!        IF ( ALLOCSTAT .NE. 0 ) THEN
!           MSG = '*** CCOL Memory allocation failed'
!           CALL M3ERR ( PNAME, JDATE, JTIME, MSG, .TRUE.)
!           END IF

!        ALLOCATE ( CROW( NCELLS ), STAT = ALLOCSTAT )
!        IF ( ALLOCSTAT .NE. 0 ) THEN
!           MSG = '*** CROW Memory allocation failed'
!           CALL M3ERR ( PNAME, JDATE, JTIME, MSG, .TRUE.)
!           END IF

!        ALLOCATE ( CLEV( NCELLS ), STAT = ALLOCSTAT )
!        IF ( ALLOCSTAT .NE. 0 ) THEN
!           MSG = '*** CLEV Memory allocation failed'
!           CALL M3ERR ( PNAME, JDATE, JTIME, MSG, .TRUE.)
!           END IF

!  Get number of cells in grid and store i,j,k indices in sequential order

         NCELLS = 0
         DO COL = 1, NPACTIVE
            DO ROW = 1, NPILLARS
               NCELLS = NCELLS + 1
               CCOL( NCELLS ) = PLUMEPTR( COL )
               CROW( NCELLS ) = ROW
               CLEV( NCELLS ) = 1
               END DO
            END DO

          RETURN

          END SUBROUTINE CELL_SEQ

      END MODULE PING_CELLORDER
@


