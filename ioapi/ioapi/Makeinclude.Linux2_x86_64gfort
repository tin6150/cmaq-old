# @(#)$Header$
#
#   For gcc/gfortran 4.0.x and 4.1.x:  OMPFLAGS, OMPLIBS empty

AR   = ar
CC   = gcc
FC   = gfortran
M4   = m4
LINK = $(CC)

MFLAGS    = -m64

OMPFLAGS  = -fopenmp
OMPLIBS   = -fopenmp
COPTFLAGS = -O3 ${MFLAGS} -ffast-math -funroll-loops -Wall -Wsurprising
FOPTFLAGS = -O3 ${MFLAGS}
FPPFLAGS  = -DF90=1
FSFLAGS   = -save
ARCHFLAGS = \
 -DAUTO_ARRAYS=1 \
 -DF90=1 -DFLDMN=1 \
 -DFSTR_L=int \
 -DIOAPI_NO_STDOUT=1 \
 -DAVOID_FLUSH=1
PARFLAGS  =
ARCHLIB   = 

M4DEFFILE = $(PVM_ROOT)/conf/$(PVM_ARCH).m4
PVMLIBS   = -lpvm3
